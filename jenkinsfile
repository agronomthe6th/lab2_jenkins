pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    checkout scm
                    docker.image('gcc:latest').inside {
                        sh 'make'
                    }
                }
            }
        }
    }

    post {
        success {
            archiveArtifacts 'path/to/artifacts/*'
        }
    }
}
